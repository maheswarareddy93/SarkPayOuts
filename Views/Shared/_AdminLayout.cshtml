
@using SarkPayOuts.Interface; 
@inject IProjectsData   _repo; 
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Booking</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,400;0,700;1,400;1,700&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/mybooking.css">
    @RenderSection("Styles", required: true)
</head>



<body>
    <div class="three col">
        <div class="hamburger" id="hamburger-4">
            <span class="line"></span>
            <span class="line"></span>
            <span class="line"></span>
        </div>
    </div>
    <section class="main-body">
        <header>

            <div class="container">
                <div class="row">

                    <div class="col-md-12">

                        <nav>
                            <img src="/img/logo.png" class="img-fluid logo-main">
                            <ul class="navbar-nav ml-md-auto ml-0 desktop-menu">
                                <li class="nav-item">
                                    <a class="nav-link" href="map.html">Home</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Layouts</a>
                                    <ul class="dropdown-menu">
                                        @if (_repo.GetProjectsData() != null && _repo.GetProjectsData().Count > 0)
                                        {
                                            int i = 1;
                                            foreach (var project in _repo.GetProjectsData())
                                            {
                                                <a class="dropdown-item" asp-action="Index_@i" asp-controller="ProjectLayout" asp-route-id="@project.projectuuid">@project.ProjectName</a>
                                                i = i + 1;
                                            }
                                        }
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">My Booking</a>
                                    <ul class="dropdown-menu">
                                        <a class="dropdown-item" href="mybooking.html">Current Booking</a>
                                        <a class="dropdown-item" href="mybooking.html">Previous Booking</a>
                                        <a class="dropdown-item" href="mybooking.html">Cancel Booking</a>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="NewBookings" asp-controller="AdminOperations">NewBookings</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="Agents" asp-controller="AdminOperations" >Agents</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="Logout" asp-controller="AdminLogin">Logout</a>
                                </li>
                            </ul>
                        </nav>

                        
                    </div>
                </div>
            </div>
        </header>

        <section>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <nav>
                            <ul class="navbar-nav ml-md-auto ml-0 mobile-menu mt-4">
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="Dashboard" asp-controller="AdminOperation">Home</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Layouts</a>
                                    <ul class="dropdown-menu">
                                        @if (_repo.GetProjectsData() != null && _repo.GetProjectsData().Count > 0)
                                        {
                                            int i = 1;
                                            foreach (var project in _repo.GetProjectsData())
                                            {
                                                <a class="dropdown-item" asp-action="Index_@i" asp-controller="ProjectLayout" asp-route-id="@project.projectuuid">@project.ProjectName</a>
                                                i = i + 1;
                                            }
                                        }
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">My Booking</a>
                                    <ul class="dropdown-menu">
                                        <a class="dropdown-item" href="mybooking.html">Current Booking</a>
                                        <a class="dropdown-item" href="mybooking.html">Previous Booking</a>
                                        <a class="dropdown-item" href="mybooking.html">Cancel Booking</a>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="map.html">Logout</a>
                                </li>

                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </section>


        <section class="sidebar">
            <div class="current">
                <h5 class="booking-title">Current Booking</h5>

                <div class="unit-number-block ">
                    <span class="unit-square">10</span>
                    <span class="unit-square">10</span>
                    <span class="unit-square">10</span>
                    <span class="unit-square">10</span>
                </div>
            </div>
            <div class="previous">
                <h5 class="booking-sub-title">Layout 1</h5>
                <div class="unit-number-block">
                    <span class="unit-square">10</span>
                    <span class="unit-square">10</span>
                    <!-- <span class="unit-square">10</span>
                    <span class="unit-square">10</span> -->
                </div>
            </div>
            <div class="cancel">
                <h5 class="booking-sub-title">Layout 2</h5>
                <div class="unit-number-block">
                    <span class="unit-square">10</span>
                    <!-- <span class="unit-square">10</span>
                    <span class="unit-square">10</span>
                    <span class="unit-square">10</span> -->
                </div>
            </div>
        </section>
                @RenderBody()
        </section>
        
        <script src="/js/jquery-3.5.1.min.js"></script>
        <script src="/js/popper.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>

        <script>
            $(document).ready(function () {
                $(".hamburger").click(function () {
                    $(this).toggleClass("is-active");
                    $(".sidebar").toggleClass("open-sidebar");
                    $(".sidebar-menu").toggleClass("open-sidebar");
                });

                $("#sidebar-menu").click(function () {
                    $(".sidebar").toggleClass("open-sidebar");
                });


                function makeTimer() {


                    var endTime = new Date("29 April 2020 9:56:00 GMT+01:00");
                    endTime = (Date.parse(endTime) / 1000);

                    var now = new Date();
                    now = (Date.parse(now) / 1000);

                    var timeLeft = endTime - now;

                    var days = Math.floor(timeLeft / 86400);
                    var hours = Math.floor((timeLeft - (days * 86400)) / 3600);
                    var minutes = Math.floor((timeLeft - (days * 86400) - (hours * 3600)) / 60);
                    var seconds = Math.floor((timeLeft - (days * 86400) - (hours * 3600) - (minutes * 60)));

                    if (hours < "10") { hours = "0" + hours; }
                    if (minutes < "10") { minutes = "0" + minutes; }
                    if (seconds < "10") { seconds = "0" + seconds; }
                    for (var i = 0; i < 10; i++) {

                        $("#hours" + i).html(hours + "&nbsp;:");
                        $("#minutes" + i).html(minutes + "&nbsp;:");
                        $("#seconds" + i).html(seconds + "");
                    }
                    // $("#days").html(days + "<span>Days</span>");


                }

                setInterval(function () { makeTimer(); }, 1000);

                // Toggle plus minus icon on show hide of collapse element
                $(".collapse").on('show.bs.collapse', function () {
                    $(this).prev(".card-header").find(".fas").removeClass("fa-caret-up").addClass("fa-caret-down");
                }).on('hide.bs.collapse', function () {
                    $(this).prev(".card-header").find(".fas").removeClass("fa-caret-down").addClass("fa-caret-up");
                });

                $(".main-body").click(function () {
                    if ($('.sidebar').hasClass('open-sidebar')) {
                        $(".sidebar").toggleClass('open-sidebar')
                        $(".hamburger").toggleClass("is-active");
                    }
                });


            });
        </script>
        @RenderSection("Scripts", required: true)

</body>
</html>
